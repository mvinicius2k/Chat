<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SingupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_singup_email_or_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/et_singup_email_or_nick"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_singup_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/et_singup_pass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_singup_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/et_singup_confirm_pass"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_singup_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_singup_create" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>